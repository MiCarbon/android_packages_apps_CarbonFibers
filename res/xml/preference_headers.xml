<preference-headers xmlns:android="http://schemas.android.com/apk/res/android" >

    <header
        android:title="@string/user_interface" />

        <header
            android:key="@+id/button_settings"
            android:icon="@drawable/ic_fibers_button"
            android:title="@string/button_settings"
            android:fragment="com.carbon.fibers.fragments.ButtonSettings" />

        <header
            android:key="@+id/interface_settings"
            android:icon="@drawable/ic_fibers_interface"
            android:title="@string/user_interface"
            android:fragment="com.carbon.fibers.fragments.ui.InterfaceSettings" />

        <header
            android:key="@+id/keyguard_settings"
            android:icon="@drawable/ic_fibers_keyguard"
            android:title="@string/keyguard_title"
            android:fragment="com.carbon.fibers.fragments.ls.KeyguardSettings" />

        <header
            android:id="@+id/more_device_settings"
            android:title="@string/more_device_controls_title"
            android:icon="@drawable/ic_fibers_device"
            android:fragment="com.carbon.fibers.fragments.MoreDeviceSettings" />

        <header
            android:id="@+id/power_menu_setings"
            android:title="@string/power_menu_title"
            android:icon="@drawable/ic_fibers_power"
            android:fragment="com.carbon.fibers.fragments.PowerMenuSettings" />

        <header
            android:id="@+id/statusbar_settings"
            android:title="@string/status_bar_title"
            android:icon="@drawable/ic_fibers_sb"
            android:fragment="com.carbon.fibers.fragments.sb.SbSettings" />

</preference-headers>
